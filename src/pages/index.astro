---
import Layout from "@/layouts/Layout.astro";
import { FeaturesCardsSection } from "@/sections/FeaturesCards";
import { FeaturesGrid } from "@/sections/FeaturesGrid";
import { HeroSection } from "@/sections/Hero";
import { LatestsPosts } from "@/sections/LatestsPosts";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 4);
---

<Layout title="Blockchain Blog - Frontend Tribe">
  <HeroSection client:load />
  <FeaturesCardsSection client:load />
  <FeaturesGrid client:load />
  <LatestsPosts client:load posts={posts} />
</Layout>
